<% unless cart.line_items.empty? %>
<h3>Your Cart</h3>
<style> 
#customers { font-family: Arial, Helvetica, sans-serif; border-collapse: collapse; width: 80%; } #customers td, #customers th { border: 1px solid #ddd; padding: 8px; } #customers tr:nth-child(even){background-color: #f2f2f2;} #customers tr:hover {background-color: #ddd;} #customers th { padding-top: 12px; padding-bottom: 12px; text-align: left; background-color: #04AA6D; color: white; } 
</style>
<table id="customers">
	<tr> <th>Quanitity</th> <th>product</th> <th>Amount</th> </tr>
	<%= render(cart.line_items) %>
	<tr>
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price)  %></td>
	</tr>
</table>
<%= button_to 'Empty Cart', cart, :method => :delete, :confirm => 'Are you sure?' %>
<p>
	<%= link_to "Continue Shopping",:controller=>"gallery",:action=>"index" %> | 
	<% unless session[:user].nil? %>
<%= link_to "Checkout" ,:controller=>"gallery",:action=>"checkout",:amount=>cart.total_price %>
	<% else %>
	<%= link_to "Checkout",:controller=>"admin",:action=>"login" %>
	<% end %>
</p>
<% end %>